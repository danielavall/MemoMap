<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneLineActivity">

    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One line a day"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:41"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Save"
            android:textColor="@color/black"
            android:background="@drawable/btn_rounded"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Divider Line -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <!-- Content Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- What happened today section -->
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What happened today?"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/etDailyNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="one sentence for today"
            android:background="@drawable/edittext_purple"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:maxLines="10"
            android:gravity="top|start"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvQuestion"/>

        <TextView
            android:id="@+id/tvCharCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23/30"
            android:textColor="@color/grey"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etDailyNote"/>

        <!-- User's note content -->
        <TextView
            android:id="@+id/tvNoteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="logi nonton film longlegs ketika adengan telepon 911 dan hujan deras tiloa tiloa berasa ada yang ikut nonton dibelakang padelhal tidak ada orang"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvCharCount"/>

        <!-- Media Section -->
        <TextView
            android:id="@+id/tvMediaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto dan Video"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvNoteContent"/>

        <LinearLayout
            android:id="@+id/mediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvMediaTitle">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_photo_placeholder"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_video_placeholder"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <!-- Audio Section -->
        <TextView
            android:id="@+id/tvAudioTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio Q1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/mediaContainer"/>

        <TextView
            android:id="@+id/tvAudioTime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="03:30  07/12/24"
            android:textColor="@color/grey"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvAudioTitle"/>

        <TextView
            android:id="@+id/tvAudioTime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="03:00  07/12/24"
            android:textColor="@color/grey"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvAudioTime1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottomIconsContainer"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0">


        <ImageView
            android:id="@+id/ivMic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="120dp"
            android:contentDescription="@string/desc_record_audio"
            android:src="@drawable/ic_mic_black" />

        <ImageView
            android:id="@+id/ivAttach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="120dp"
            android:contentDescription="@string/desc_attach_file"
            android:src="@drawable/ic_attach_file" />

        <ImageView
            android:id="@+id/ivEmoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="@string/desc_emoji"
            android:src="@drawable/ic_emoji" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>