<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="TabButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:textColor">@color/tab_text_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item> <!-- default size -->
        <item name="android:padding">8dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="FormInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>
